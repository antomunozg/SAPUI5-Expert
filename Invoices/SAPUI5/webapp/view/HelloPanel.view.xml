<mvc:View controllerName="logaligroup.SAPUI5.controller.HelloPanel"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns:core="sap.ui.core">

    <Panel headerText="{i18n>helloPanel}" class="sapUiResponsiveMargin" width="auto">
        <content>
            <Button id="_IDGenButton1" text="{i18n>showHelloButtonText}" press=".onShowHellow" class="sapUiSmallMarginEnd"/>
            <Input id="_IDGenInput1" type="Text" value="{/recipient/name}" width="60%" valueLiveUpdate="true"/>
            <Text text="Hello {/recipient/name}" class="sapUiSmallMargin boldElements"/>
            <Button id="_IDGenButton2" text="{i18n>helloDialogBut}" press=".onOpenDialog" class="sapUiSmallMarginEnd"/>
        </content>
    </Panel>
    <core:Fragment fragmentName="logaligroup.SAPUI5.view.Form01" type="XML"></core:Fragment>
</mvc:View>